{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>BookingDate</th>
                <td>{{ booking.bookingDate ? booking.bookingDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CheckInDate</th>
                <td>{{ booking.checkInDate ? booking.checkInDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CheckOutDate</th>
                <td>{{ booking.checkOutDate ? booking.checkOutDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NumberOfNight</th>
                <td>{{ booking.numberOfNight }}</td>
            </tr>
            <tr>
                <th>TotalBooking</th>
                <td>{{ booking.TotalBooking }}</td>
            </tr>
            <tr>
                <th>PriceByNight</th>
                <td>{{ booking.priceByNight }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ booking.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_booking_index') }}">back to list</a>

    <a href="{{ path('app_booking_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
